<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <TextView
        android:id="@+id/detail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My ToDo Title"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"

        />
    <ListView
        android:id="@+id/detail_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/detail_title"
        >
    </ListView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/detail_list_view"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/detail_back_button"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:text="back"
            />
        <EditText
            android:id="@+id/detail_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="Enter New ToDo Item Here"
            android:paddingTop="20dp"
            android:layout_centerInParent="true"
            />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/detail_fab"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"

            />


    </RelativeLayout>


</RelativeLayout>